{
  "name": "smtp-sink",
  "version": "0.1.0",
  "description": "SMTP sink for local testing: receives emails via SMTP and exposes them via HTTP.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "smtp-sink": "dist/cli.js"
  },
  "files": [
    "dist",
    "public"
  ],
  "scripts": {
    "build": "tsup src/cli.ts src/index.ts --format esm --target node20 --dts --out-dir dist --sourcemap --clean --banner.cli='#!/usr/bin/env node' --splitting false",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "lint": "eslint .",
    "format": "prettier -w .",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jimmystridh/node-smtp-sink.git"
  },
  "keywords": [
    "smtp",
    "testing",
    "email",
    "mail",
    "server"
  ],
  "author": "Jimmy Stridh",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "commander": "latest",
    "mailparser": "latest",
    "selfsigned": "latest",
    "smtp-server": "latest"
  },
  "devDependencies": {
    "@types/mailparser": "latest",
    "@types/node": "latest",
    "@types/smtp-server": "latest",
    "eslint": "latest",
    "eslint-config-prettier": "latest",
    "eslint-plugin-import": "latest",
    "prettier": "latest",
    "tsup": "latest",
    "tsx": "latest",
    "typescript": "latest",
    "vitest": "latest",
    "nodemailer": "latest"
  },
  "scripts": {
    "build": "tsup src/cli.ts src/index.ts --format esm --target node20 --dts --out-dir dist --sourcemap --clean --splitting false",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "lint": "eslint .",
    "format": "prettier -w .",
    "test": "vitest run",
    "test:watch": "vitest",
    "docker:build": "docker build -t smtp-sink:dev .",
    "docker:run": "docker run --rm -p 1025:1025 -p 1080:1080 smtp-sink:dev --smtpPort 1025 --httpPort 1080"
  }
}
