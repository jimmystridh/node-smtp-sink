{
  "name": "smtp-sink",
  "version": "0.0.4",
  "description": "SMTP server for testing. Accepts e-mails and lists them via a http interface.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test:smtp": "NODE_OPTIONS=--experimental-vm-modules jest test/smtp.test.js --runInBand",
    "test:http": "NODE_OPTIONS=--experimental-vm-modules jest test/http.test.js --runInBand",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest test/integration.test.js --runInBand",
    "test:tls": "NODE_OPTIONS=--experimental-vm-modules jest test/tls.test.js --runInBand",
    "test:phase1": "NODE_OPTIONS=--experimental-vm-modules jest test/phase1.test.js --runInBand",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --runInBand",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jimmystridh/node-smtp-sink.git"
  },
  "keywords": [
    "smtp",
    "testing",
    "email",
    "mail",
    "server"
  ],
  "author": "Jimmy Stridh",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "cli": "^1.0.1",
    "mailparser": "^3.9.0",
    "smtp-protocol": "^2.4.7"
  },
  "bin": {
    "smtp-sink": "./index.js"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "jest": "^30.2.0",
    "nodemailer": "^7.0.10",
    "smtp-server": "^3.16.1"
  }
}
